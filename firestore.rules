rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /graves/{docId} {
      // Svi mogu ƒçitati
      allow read: if true;

      // Samo admin (preko emaila) smije pisati/brisati
      allow create, update, delete: if request.auth != null
        && request.auth.token.email == "admin@example.com";
    }
  }
}
